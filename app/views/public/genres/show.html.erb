<div class='container'>
	<div class='row'>
		<div class='col-6'>
			<div class="mt-5">
				<h3><%= link_to "全商品を表示", items_path, class:"ec-genre-list-item" %></h3>
					<h2 ><%= @genre.name %> 一覧(全<%= @itemss.count %>件)</h2>
						<div class="d-flex align-content-around flex-wrap">
							<table>
								<tbody>
									<tr>
										<% @items.each do |item| %>
										<% if item.is_status==false %>
										<% if item.image.attached? %>
									<td>
										<%=link_to item_path(item.id) do %>
										<%= image_tag item.image, size: "150x150" %><br>
										<% end %>
										<% else %>
									</td>
									<td>
										<%=link_to item_path(item.id) do %>
										<%= image_tag 'no_image', size: "150x150" %><br>
										<% end %>
										<% end %>
										<%= item.name %><br>
										￥<%= item.with_tax_price.to_s(:delimited)%>円<br>
									</td>
									　<% else %>
										<% end %>
										<% end %>
									</tr>
								</tbody>
							</table>
						</div>
			</div>
		</div>
	</div>
</div>