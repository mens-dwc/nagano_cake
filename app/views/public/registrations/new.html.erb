<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field form-group col-xs-12">
    <%= f.label :"名前", class: "col-sm-2 control-label" %>
    <%= f.label :"(姓)", class: "col-sm-1 control-label" %>
    <%= f.text_field :last_name, autofocus: true, class: "col-sm-3 form-control-static name" %>
    <%= f.label :"(名)", class: "col-sm-1 control-label" %>
    <%= f.text_field :first_name, autofocus: true, class: "col-sm-3 form-control-static name" %>
  </div>

  <div class="field form-group col-xs-12">
    <%= f.label :"フリガナ", class: "col-sm-2 control-label" %>
    <%= f.label :"(セイ)", class: "col-sm-1 control-label" %>
    <%= f.text_field :kana_last_name, autofocus: true, class: "col-sm-3 form-control-static name" %>
    <%= f.label :"(メイ)", class: "col-sm-1 control-label" %>
    <%= f.text_field :kana_first_name, autofocus: true, class: "col-sm-3 form-control-static name" %>
  </div>

  <div class="field form-group col-xs-12">
    <%= f.label :"email", class: "col-sm-2 control-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field form-group col-xs-12">
    <%= f.label :password, class: "col-sm-2 control-label" %>
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
