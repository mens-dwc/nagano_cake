<div class="container">
  <h2 class="mt-5">商品一覧</h2>

<table>
	<thead>
		<tr>
			<th></th>
			<th colspan="3"></th>
		</tr>
	</thead>
		<tbody>
			<tr>
		    <% @items.each do |item| %>
				<td><% if item.image.attached? %>
        <%= image_tag item.image, size: "50x50" %>
        <% else %>
        <%= image_tag 'no_image', size: "50x50" %>
        <% end %><br>
				<%= item.name %><br>
				<%= item.price %>円<br>
				</td>
			<% end %>
			</tr>
		</tbody>
</table>