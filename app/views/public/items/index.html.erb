<table>
	<thead>
		<tr>
			<th>商品検索</th>
			<th colspan="3"></th>
		</tr>
	</thead>
		<tbody>
			<tr>
		    <% @items.each do |item| %>
				<td><%= link_to item_path(item.id) do %>
				<%= image_tag item.get_profile_image, size:'50x50' %>
				<% end %>
				<br>
				<%= item.name %><br>
				<%= item.price %>円<br>
				<%= item.introduction%></td>
			<% end %>
			</tr>
		</tbody>
</table>