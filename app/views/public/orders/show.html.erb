<h2>注文履歴詳細</h2>

<h3>注文情報</h3>

<table>
  <tbody>
    <tr>
      <th>注文日</th>
      <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
    </tr>
    <tr>
      <th>配送先</th>
      <td>
        <%= @order.postal_code %>
        <%= @order.address %>
        <%= @order.name %>
      </td>
    </tr>
    <tr>
      <th>支払方法</th>
      <td><%= @order.payment_type %></td>
    </tr>
    <tr>
      <th>ステータス</th>
      <td><%= @order.status %></td>
    </tr>
  </tbody>
</table>

<table>
  <thead>
    <tr>
      <th>商品</th>
    　<th>単価（税込）</th>
    　<th>個数</th>
    　<th>小計</th>
    </tr>
  </thead>
  <tbody>
    <% @ordered_items.each do |ordered_item| %>
    <tr>
      <td><%= ordered_item.item.name %></td>
      <td>円</td>
      <td><%= ordered_item.quantity %></td>
      <td></td>
    </tr>
  </tbody>
</table>

<table>
  <tbody>
    <tr>
      <th>商品合計</th>
      <td></td>
    </tr>
    <tr>
      <th>配送料</th>
      <td></td>
    </tr>
    <tr>
      <th>ご請求額</th>
      <td></td>
    </tr>
  </tbody>
</table>

