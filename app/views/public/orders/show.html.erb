<div class="container">
  <h2 class="mt-5">注文履歴詳細</h2>
  <div calss="row">
    <% if @order.present? %>
    <div class="col-xs-8">
    <h3>注文情報</h3>
    <table class="table table-striped">
      <tbody>
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td>
            〒<%= @order.postal_code %>
            <%= @order.address %>
            <%= @order.name %>
          </td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><%= @order.payment_type %></td>
        </tr>
        <tr>
          <th>ステータス</th>
          <td><%= @order.status %></td>
        </tr>
      </tbody>
    </table>
    </div>
    <div class="col-xs-3">
      <h3>請求情報</h3>
    	<table class="table table-striped">
        <tr>
          <th class="info">商品合計</th>
          <td class="text-right col-xs-5"><%= taxed_price(@ordered_items) %>円</td>
        </tr>
        <tr>
          <th class="info">配送料</th>
          <td class="text-right col-xs-5"><%= @order.postage %>円</td>
        </tr>
        <tr>
          <th class="info">ご請求金額</th>
          <td class="text-right col-xs-5"><%= @order.total_payment %>円</td>
        </tr>
      </table>
    </div>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>商品</th>
        　<th>単価（税込）</th>
        　<th>個数</th>
        　<th>小計</th>
        </tr>
      </thead>
      <tbody>
        <% @ordered_items.each do |ordered_item| %>
        <tr>
          <td><%= ordered_item.item.name %></td>
          <td><%= ordered_item.item.with_tax_price %>円</td>
          <td><%= ordered_item.quantity %></td>
          <td><%= ordered_item.subtotal %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
      <% else %>
        <p>注文履歴がありません。</p>
    <% end %>
  </div>
</div>

