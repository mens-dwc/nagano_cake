<h2>注文履歴一覧</h2>
<% if @orders.present? %>
  <table class='table'>
    <thead>
      <tr>
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払金額</th>
        <th>ステータス</th>
        <th colspan="6">注文詳細</th>
      </tr>
    </thead>
    <% @orders.each do |order| %>
    <tbody>
      <tr>
        <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
        <td>
          <%= order.postal_code %>
          <%= order.address %>
          <%= order.name %>
        </td>
        <td><%= order.total_payment %>円</td>
        <td><%= order.status %></td>
        <td colspan="6">
          <%= link_to "表示する", edit_order_path(order) %>
        </td>
      </tr>
    </tbody>
    <% end %>
  </table>
  <% else %>
    <p>注文履歴がありません。</p>
<% end %>
