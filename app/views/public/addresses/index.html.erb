<h2>配送先登録/一覧</h2>

<%= form_with model: @address, url: '/addresses', method: :post do |f| %>
  <div>
    <%= f.label :郵便番号（ハイフンなし） %>
    <%= f.text_field :postal_code %>
  </div>
  <div>
    <%= f.label :住所 %>
    <%= f.text_field :address %>
  </div>
  <div>
    <%= f.label :宛名 %>
    <%= f.text_field :name %>
    <%= f.submit '新規登録' %>
  </div>
<% end %>

<table class='table'>
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th colspan="4"></th>
    </tr>
  </thead>
  <% @addresses.each do |address| %>
  <tbody>
    <tr>
      <td><%= address.postal_code %></td>
      <td><%= address.address %></td>
      <td><%= address.name %></td>
      <td colspan="4">
        <%= link_to "編集する", edit_address_path(address), class: 'btn btn-success' %>
        <%= link_to "削除する", address_path(address), method: :delete, confirm: "本当に削除しますか" %></td>
      </td>
    </tr>
  </tbody>
  <% end %>
</table>