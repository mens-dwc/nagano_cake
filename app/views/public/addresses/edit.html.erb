<h2>配送先編集</h2>

<%= form_with model: @address, url: address_path(@address.id), method: :patch do |f| %>
  <div class="field">
    <div class="label">郵便番号（ハイフンなし）</div>
    <%= f.text_field :postal_code %>
  </div>
  <div class="field">
    <div class="label">住所</div>
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <div class="label">宛名</div>
    <%= f.text_field :name %>
    <%= f.submit '変更内容を保存' %>
  </div>
<% end %>

