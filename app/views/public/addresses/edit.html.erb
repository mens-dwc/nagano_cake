<div class="container">
  <h2 class="mt-5">配送先編集</h2>
  <%= form_with model: @address, url: address_path(@address.id), method: :patch do |f| %>
    <div class="form-group ">
      <%= f.label :郵便番号（ハイフンなし） %>
      <%= f.text_field :postal_code, class: 'form-control',:placeholder => "例:1234567"  %>
    </div>
    <div class="form-group ">
      <%= f.label :住所 %>
      <%= f.text_field :address, class: 'form-control',:placeholder => "例:長野県〇〇市〇〇町1-1-1" %>
    </div>
    <div class="form-group ">
      <%= f.label :宛名 %>
      <%= f.text_field :name, class: 'form-control',:placeholder => "例:ながのCAKE" %>
    </div>
    <div class="form-group">
      <%= f.submit '変更内容を保存', class: 'btn btn-success' %>
    </div>
  <% end %>
</div>

