<div class="container my-5">
  <div class="row">
    <h2>注文詳細</h2>
  </div>
  <div class="row mt-3">
    <div class="col-sm-9">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td>
              <i class="fas fa-user"></i>購入者
            </td>
            <td>
              <%= @order.customer.last_name %>
              <%= @order.customer.first_name %>
            </td>
          </tr>
          <td>
            <i class="fas fa-calendar-alt"></i>注文日
          </td>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          <tr>
            <td>
              <i class="fas fa-truck"></i>配送先
            </td>
            <td>
              〒<%= @order.postal_code %>
              <%= @order.address %>
              <%= @order.customer.last_name %>
              <%= @order.customer.first_name %>
            </td>
          </tr>
          <tr>
            <td>支払方法</td>
            <td><%= @order.payment_type_i18n %></td>
          </tr>
          <tr>
            <td>注文ステータス</td>
            <td>
              <%= form_with model: @order, url: admin_order_order_status_path(@order), method: :patch do |f| %>
                <%= f.select :status, Order.statuses_i18n.invert, class: "form-control-inline form-control-sm col-6"  %>
                <%= f.submit "更新", class: "btn btn-primary btn-sm" %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-sm-9">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
            <th colspan="1"></th>
          </tr>
        </thead>
        <% @ordered_items.each do |ordered_item| %>
        <tbody>
          <tr>
            <td><%= ordered_item.item.name %></td>
            <td><%= (ordered_item.item.price * 1.1).floor.to_s(:delimited) %>円</td>
            <td><%= ordered_item.quantity %>個</td>
            <td><%= (ordered_item.item.price * ordered_item.quantity * 1.1).floor.to_s(:delimited) %>円</td>
            <td>
              <%= form_with model: ordered_item, url: admin_order_item_status_path(ordered_item, order_id: @order.id), method: :patch do |f| %>
                <%= f.select :item_status, OrderedItem.item_statuses_i18n.invert,class: "form-control-inline form-control-sm col-6"  %>
                <%= f.submit "更新", class: "btn btn-primary btn-sm" %>
              <% end %>
            </td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
  <div class="col-sm-3 d-flex">
    <table class="table table-borderless align-self-end">
      <tbody>
        <tr class="border-bottom border-dark">
          <td>商品合計</td>
          <td><%= @items_total_price.floor.to_s(:delimited) %>円</td>
        </tr>
        <tr class="border-bottom border-dark">
          <td>送料</td>
          <td><%= @order.postage %>円</td>
        </tr>
        <tr class="border-bottom border-dark">
          <td>請求金額合計</td>
          <td><%= (@items_total_price + @order.postage).floor.to_s(:delimited) %>円</td>
        </tr>
      </tbody>
    </table>
  </div>
</div>