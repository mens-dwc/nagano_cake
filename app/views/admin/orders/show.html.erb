<div class="container my-5">
  <div class="row">
    <h2>注文詳細</h2>
  </div>
  <div class="row mt-3">
    <div class="col-sm-9">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td>
              <i class="fas fa-search"></i>購入者
            </td>
            <td>
              <%= @order.last_name %>
              <%= @order.first_name %>
            </td>
          </tr>
          <td>注文日</td>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          <tr>
            <td>配送先</td>
            <td>
              〒<%= @order.postal_code %>
              <%= @order.address %>
              <%= @order.last_name %>
              <%= @order.first_name %>
            </td>
          </tr>
          <tr>
            <td>支払方法</td>
            <td><%= @order.payment_type %></td>
          </tr>
          <tr>
            <td>注文ステータス</td>
            <td>
              <%= form_for (@order), url: admin_order_status_path(@order) do |f| %>
                <%= f.select :order_status, [["入金待ち", "入金待ち"], ["入金確認","入金確認"],["製作中","製作中"],["発送準備中","発送準備中"],["発送済み","発送済み"]], class: "form-control" %>
                <%= f.submit "更新", class: "btn btn-primary btn-sm" %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-sm-9">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
            <th colspan="1"></th>
          </tr>
        </thead>
        <% @ordered_items.each do |ordered_item| %>
        <tbody>
          <tr>
            <td><%= ordered_item.item_name %></td>
            <td><%= (ordered_item.item_price * 1.1).floor %></td>
            <td><%= ordered_item.quantity %></td>
            <td><%= (ordered_item.item_price * ordered_item.quantity * 1.1).floor %></td>
            <td>
              <%= form_for (ordered_item), url: admin_item_status_path(ordered_item, order_id: @order.id) do |f| %>
                <%= f.select :item_status, [["着手不可", "着手不可"], ["製作待ち","製作待ち"], ["製作中","製作中"], ["製作完了","製作完了"]] %>
                <%= f.submit "更新", class: "btn btn-primary btn-sm ml-3" %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="col-sm-3 d-flex">
    <table class="table table-borderless align-self-end">
      <tbody>
        <tr class="border-bottom border-dark">
          <td>商品合計</td>
          <td><%= @items_total_price %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>