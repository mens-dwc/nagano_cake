<div class="container">
  <h2 class="mt-5">
    <%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細
  </h2>
  <div class="row">
    <div class="col-xs-8 mt-3">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td>会員ID</td>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <td>氏名</td>
            <td>
              <%= @customer.last_name %><%= @customer.first_name %>
            </td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td><%= @customer.kana_last_name %><%= @customer.kana_first_name %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= @customer.tel_number %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= @customer.email%></td>
          </tr>
          <tr>
            <td>会員ステータス</td>
            <td>
              <% if @customer.is_deleted == true %>
                <span class="text-danger">退会済</span>
              <% elsif @customer.is_deleted == false %>
                <span class="text-success">有効会員</span>
              <% end %>
            </td>
          </tr>
          <tr>
            <td></td>
            <td>
              <div class="actions">
                <%= link_to "編集する",edit_admin_customer_path(@customer), class: "btn btn-success #{@customer.id}" %>
              </div>
            </td>
            <td>
              <div class="actions">
                <%#= link_to " 注文履歴一覧を見る", current_index_admin_order_path(@customer), class: "glyphicon glyphicon-folder-open btn btn-info" %>
              </div>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>