<div class='container'>
  <div class='row'>
    <div class='col-md-5'>
       <div class="mt-5">
         <% if @item.image.attached? %>
        <%= image_tag @item.image, size: "300x300" %>
        <% else %>
        <%= image_tag 'no_image', size: "300x300" %>
        <% end %>
        </div>
        </div>

<div class="mt-5">
<table class="table">
  <tbody>
        <tr>
        <td>商品名 <%= @item.name %></td>
        </tr>

        <tr>
        <td>商品説明 <%= @item.introduction %></td>
        </tr>

        <tr>
        <td>ジャンル名 <%= @item.genre_id %></td>
        </tr>

        <tr>
        <td>税込価格<br>(税抜価格) <%= @item.with_tax_price %>  (<%= @item.price %>)円</td>
        </tr>

        <tr>
        <td><% if @item.is_status==false %>ステータス 販売中
            <% else @item.is_status==true %>ステータス 販売停止中
            <% end %>
        </td>
        </tr>

        <tr>
        <td><%=link_to "編集",edit_admin_item_path(@item.id),class: 'btn btn-success'%></td>
        </tr>
  </tbody>
</table>
</div>
</div>
</div>