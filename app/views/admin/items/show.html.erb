<div class='container'>
  <div class='row'>
    <div class='col-5'>
       <div class="mt-5">
         <% if @item.image.attached? %>
        <%= image_tag @item.image, size: "300x300" %>
        <% else %>
        <%= image_tag 'no_image', size: "300x300" %>
        <% end %>
        </div>
    </div>

          <div class='col-6'>
            <div class="mt-5">
              <table class="table">
                <tbody>
                  <tr>
                  <th>商品名</th><td><%= @item.name %></td>
                  </tr>

                  <tr>
                  <th>商品説明</th><td><%= @item.introduction %></td>
                  </tr>

                  <tr>
                  <th>ジャンル名</th><td><%= @item.genre.name %></td>
                  </tr>

                  <tr>
                  <th>税込価格<br>(税抜価格)</th><td><%= @item.with_tax_price.to_s(:delimited) %><br>(<%= @item.price.to_s(:delimited)%>)円</td>
                  </tr>

                  <tr>
                  <th>ステータス</th>
                  <td><% if @item.is_status==false %><span class="text-success">販売中</span>
                      <% else @item.is_status==true %><span class="text-danger">販売停止中</sapn>
                      <% end %>
                  </td>
                  </tr>

                  <tr>
                  <td class="row justify-content-center">
                  <%=link_to "編集",edit_admin_item_path(@item.id),class: 'btn btn-success'%>
                  </td>
                  </tr>

                </tbody>
              </table>
            </div>
          </div>
  </div>
</div>