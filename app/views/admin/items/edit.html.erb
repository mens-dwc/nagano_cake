<div class="mt-5">
 <div class="row justify-content-center">
   <h3>新規編集画面</h3>
</div>
</div>


<div class="mt-3">
<div class="row justify-content-center">
  <%= form_with model: @item,url: admin_item_path do |f| %>
<div class="form-group row">
   <div class="col-4">
  <%= f.label:商品画像 %>
  </div>
  <div class="col-8">
  <%= f.file_field :image, accept: "image/*",class:"pl-3" %>
  </div>
</div>


<div class="form-group row">
   <div class="col-4">
   <%= f.label:商品名%>
   </div>
   <div class="col-8">
   <%= f.text_field :name,class:"pl-3"%>
   </div>
</div>

<div class="form-group row">
  <div class="col-4">
  <%= f.label:商品説明%>
  </div>
  <div class="col-8">
  <%= f.text_area :introduction,class:"pl-3"%>
  </div>
</div>


<div class="form-group row">
  <div class="col-4">
  <%= f.label:ジャンル%>
  </div>
  <div class="col-8">
  <%= f.collection_select :genre_id, Genre.all,:id,:name ,prompt: "ジャンルを選んでください",class:"pl-3" %></td>
  </div>
</div>

<div class="form-group row">
  <div class="col-4">
  <%= f.label:税抜価格%>
  </div>
  <div class="col-8">
  <%= f.text_field :price,class:"pl-3"%>円
  </div>
</div>


<div class="form-group row">
  <div class="col-4">
  <%= f.label:販売ステータス%>
  </div>
  <div class="col-8">
  <%= f.radio_button :is_status, "false" ,class:"pl-3"%>販売中　　<%= f.radio_button :is_status, "true",class:"pl-3"%>販売中止中
  </div>
</div>


<div class="form-group row">
  <div class="col-4"></div>
  <div class="col-8">
  <%= f.submit "変更を登録",class: 'btn btn-success' %>
  </div>
</div>
<% end %>

</div>
</div>
