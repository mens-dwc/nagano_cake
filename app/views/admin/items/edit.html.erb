<div class="container">
  <h2 class="mt-5">編集画面</h2>

<div class="row justify-content-center">
  <%= form_with model: @item,url: admin_item_path do |f| %>
  <div class="form-group ">
  <%= f.label:商品画像 %>
  <%= f.file_field :image, accept: "image/*" %>
  </div>

  <div class="form-group ">
      <%= f.label:商品名%>
      <%= f.text_field :name,class: 'form-control'%>
  </div>

  <div class="form-group ">
  <%= f.label:商品説明%>
  <%= f.text_area :introduction,class: 'form-control'%>
  </div>

  <div class="form-group ">
  <%= f.label:ジャンル%>
  <%= f.collection_select :genre_id, Genre.all,:id,:name ,prompt: "ジャンルを選んでください",class: 'form-control' %></td>
  </div>

  <div class="form-group ">
  <%= f.label:税抜価格%>
  <%= f.text_field :price,class: 'form-control'%>円
  </div>

  <div class="form-group ">
  <%= f.label:販売ステータス%>
  <%= f.radio_button :is_status, "false" ,class: 'form-control'%>販売中　　<%= f.radio_button :is_status, "true",class: 'form-control'%>販売中止中
  </div>

<div class="row justify-content-center">
  <div class="form-group ">
  <%= f.submit "変更を登録",class: 'btn btn-success' %>
  </div>
</div>
<% end %>
</div>
</div>
